<div id="center">
  <h1 id="main-title">Articles#index</h1>
  <h3 id="create"><%= link_to "Create a new article", new_article_path %></h3>
</div>
<ul>
  <% @articles.each do |article| %>
    <div class="card">
      <div class="card-body">
        <li><h2><%= link_to article.title, article_path(article) %></h2> <p><%= article.content %></p></li>
      </div>
    </div>
  <% end %>
</ul>
